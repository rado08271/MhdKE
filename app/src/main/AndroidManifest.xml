<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="sk.rafig.mhdke">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-feature
            android:name="android.hardware.telephony"
            android:required="true" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.Light">
        <activity
                android:name=".ui.CurrentTicketPreview"
                android:screenOrientation="portrait" ></activity>

        <receiver
                android:name=".api.service.SmsReciever"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
                android:screenOrientation="portrait"
                android:name=".ui.ActiveTicketActivity"
                android:parentActivityName=".ui.SplashActivity"
                android:theme="@style/AppTheme.Dark"></activity>
        <service android:name=".notifications.service.NotificationService"></service>

        <activity
                android:name=".ui.TicketActivity"
                android:parentActivityName=".ui.SplashActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.OopsActivity"
                android:screenOrientation="portrait" />
        <activity android:name=".ui.LegalActivity" />
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.HistoryActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ui.AllowActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ui.TicketPreviewActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.Light" />
        <activity
                android:name=".ui.WelcomeActivity"
                android:parentActivityName=".ui.SplashActivity"
                android:screenOrientation="portrait" />
    </application>

</manifest>