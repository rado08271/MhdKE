<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="sk.rafig.mhdke">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <uses-feature
            android:name="android.hardware.telephony"
            android:required="true" />

    <application

            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.Light">

        <service android:name=".notifications.service.NotificationService">
        </service>

        <receiver
                android:name=".api.service.SmsReciever"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
                android:name=".ui.ActiveTicketActivity"
                android:parentActivityName=".ui.SplashActivity"
                android:theme="@style/AppTheme.Dark"></activity>

        <activity
                android:screenOrientation="portrait"
                android:name=".ui.TicketActivity"
                android:parentActivityName=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
                android:screenOrientation="portrait"
                android:name=".ui.OopsActivity"></activity>
        <activity android:name=".ui.LegalActivity"></activity>
        <activity
                android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".ui.HistoryActivity"></activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".ui.AllowActivity"></activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".ui.TicketPreviewActivity"
                android:theme="@style/AppTheme.Dark"></activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".ui.WelcomeActivity"
                android:parentActivityName=".ui.SplashActivity"></activity>
    </application>

</manifest>