<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/id_activity_ticket_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.TicketActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="72dp">

        <include
                android:id="@+id/id_activity_ticket_toolbar"
                layout="@layout/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
                app:layout_constraintBottom_toTopOf="@+id/id_activity_ticket_pulse_animation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_activity_ticket_toolbar"
                android:id="@+id/id_activity_ticket_location"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/id_activity_ticket_city_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_activity_ticket_not_allowed"
                    android:textAlignment="center"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/id_activity_ticket_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            <TextView
                    android:id="@+id/id_activity_ticket_change_city_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_activity_ticket_change_title"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            <TextView
                    android:id="@+id/id_activity_ticket_change_not_implemented"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/string_activity_ticket_not_implemented"
                    android:textAlignment="center"
                    android:textSize="16sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/id_activity_ticket_pulse_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/id_activity_ticket_toolbar">


            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="90dp"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <ImageView
                        android:id="@+id/id_activity_ticket_button_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_button_light" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/id_activity_ticket_ticket_buy_ticket"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="@string/ticket_buy"
                            android:textAlignment="center"
                            android:textColor="@color/text_white"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/id_activity_ticket_loading_button"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_three_dots"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <ImageView
                    android:id="@+id/id_activity_ticket_primary_pulse"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:src="@drawable/ic_pulse_signal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/id_activity_ticket_secondary_pulse"
                    android:layout_width="176dp"
                    android:layout_height="176dp"
                    android:src="@drawable/ic_pulse_signal"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/id_activity_ticket_background_pulse"
                    android:layout_width="212dp"
                    android:layout_height="212dp"
                    android:src="@drawable/ic_pulse_signal"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:id="@+id/id_activity_ticket_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_activity_ticket_pulse_animation">

            <TextView
                    android:id="@+id/id_activity_ticket_sms_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ticket_sms_price"
                    android:textAlignment="center"
                    android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/id_activity_ticket_history_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/string_activity_ticket_history"
                    android:textAlignment="center"
                    android:textColor="@color/blue_text"
                    android:textSize="16sp" />


            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history_drk"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/id_activity_ticket_pulse_animation"
                    app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/id_activity_ticket_background_view_animation"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:src="@drawable/ic_button_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>